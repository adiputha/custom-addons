<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Petty Cash Employee Group -->
        <record id="group_petty_cash_employee" model="res.groups">
            <field name="name">Petty Cash / Employee</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Users who can request petty cash</field>
        </record>

        <!-- Petty Cash HOD Group -->
        <record id="group_petty_cash_hod" model="res.groups">
            <field name="name">Petty Cash / Department Head</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_petty_cash_employee'))]"/>
            <field name="comment">Department Heads who can approve petty cash requests</field>
        </record>

        <!-- Petty Cash Float Manager Group -->
        <record id="group_petty_cash_float_manager" model="res.groups">
            <field name="name">Petty Cash / Float Manager</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_petty_cash_hod'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Users who can manage the petty cash float and replenishment</field>
        </record>
    </data>
</odoo>