<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="float_customization_reject_wizard_form" model="ir.ui.view">
        <field name="name">float.customization.reject.wizard.form</field>
        <field name="model">float.customization.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Customization">
                <sheet>
                    <div class="oe_title">
                        <h1>Reject Float Customization</h1>
                    </div>

                    <group>
                        <field name="customization_id" readonly="1"/>
                        <field name="rejection_reason" placeholder="Please provide a reason for rejecting this customization request..."/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_reject" string="Reject" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>